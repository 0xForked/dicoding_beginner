<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_hundred_thirty_dp"
    android:layout_margin="3dp">
    <RelativeLayout
        style="@style/LayoutClick"
        android:id="@+id/lay_vertical_click">
        <ImageView
            style="@style/ImageVertical"
            android:id="@+id/img_vertical"
            android:contentDescription="@null" />

        <TextView
            style="@style/Text.Main.Title"
            android:id="@+id/txt_vertical_title"
            android:hint="@string/item_title"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_toEndOf="@+id/img_vertical" />

        <RelativeLayout
            style="@style/WrapContent"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_toEndOf="@+id/img_vertical"
            android:layout_alignParentBottom="true">
            <TextView
                style="@style/Text.Card.Subtitle"
                android:id="@+id/txt_vertical_source"
                android:text="@string/item_source" />
            <TextView
                style="@style/Text.Card.Subtitle"
                android:id="@+id/txt_vertical_author"
                android:layout_toEndOf="@id/txt_vertical_source"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"
                android:text="@string/item_author" />
            <TextView
                android:layout_below="@id/txt_vertical_source"
                style="@style/Text.Card.Subtitle"
                android:id="@+id/txt_vertical_published"
                android:hint="@string/item_published" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>